pipeline {
    agent any
    
    tools {
        jdk 'JAVA11'
        maven 'Maven392'
    }
    
    environment {
        JAVA_HOME='${jdk}'
    }

    stages {
            stage('Which Java?') {
                steps {
                    sh 'java --version'
                }
            }
            stage ('Build') {
                steps {              
                    sh "mvn clean verify"                    
                }
            }

    }
}